
{
  "name": "hypertype",
  "displayName": "HyperType",
  "description": "Pixel-art typing effects with Balatro-style animations. Watch your keystrokes come alive with floating text, color gradients, and retro visual feedback.",
  "version": "0.0.1",
  "publisher": "Thanh-huyio",
  "author": {
    "name": "Thanh-Huy"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Thanh-huy1104/hypertype"
  },
  "bugs": {
    "url": "https://github.com/Thanh-huy1104/hypertype/issues"
  },
  "homepage": "https://github.com/Thanh-huy1104/hypertype#readme",
  "keywords": [
    "typing",
    "effects",
    "animation",
    "pixel",
    "retro",
    "gamification",
    "visual",
    "balatro"
  ],
  "icon": "media/icons/arrow.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "HyperType",
            "properties": {
                "hypertype.enableSound": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable typing sound effects"
                }
            }
        },
        "views": {
            "explorer": [
                  {
                    "type": "webview",
                    "icon": "media/icons/arrow.png",
                    "id": "hypertype.pixelView",
                    "name": "HyperType"
                }
            ]
        },
        "commands": [
            {
                "command": "hypertype.start",
                "title": "Start Hypertype"
            },
            {
                "command": "hypertype.toggleSound",
                "title": "HyperType: Toggle Sound Effects"
            }
        ]
    },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
